<!-- profile.jsp -->
<div class="profile" style="text-align: center; padding: 20px;">
    <h2 style="color: #333; font-family: Arial, sans-serif;">User Profile</h2>
    <div class="profile-info" style="max-width: 400px; margin: 0 auto;">
        <div class="profile-item" style="background-color: #f9f9f9; margin: 10px 0; padding: 15px; border-radius: 8px; display: flex; justify-content: space-between;">
            <strong style="color: #007BFF; flex: 1; text-align: left;">First Name:</strong>
            <span style="color: #555; flex: 1; text-align: center;">${firstName}</span>
        </div>
        <div class="profile-item" style="background-color: #f9f9f9; margin: 10px 0; padding: 15px; border-radius: 8px; display: flex; justify-content: space-between;">
            <strong style="color: #007BFF; flex: 1; text-align: left;">Last Name:</strong>
            <span style="color: #555; flex: 1; text-align: center;">${lastName}</span>
        </div>
        <div class="profile-item" style="background-color: #f9f9f9; margin: 10px 0; padding: 15px; border-radius: 8px; display: flex; justify-content: space-between;">
            <strong style="color: #007BFF; flex: 1; text-align: left;">Username:</strong>
            <span style="color: #555; flex: 1; text-align: center;">${username}</span>
        </div>
        <div class="profile-item" style="background-color: #f9f9f9; margin: 10px 0; padding: 15px; border-radius: 8px; display: flex; justify-content: space-between;">
            <strong style="color: #007BFF; flex: 1; text-align: left;">Email:</strong>
            <span style="color: #555; flex: 1; text-align: center;">${email}</span>
        </div>
        <div class="profile-item" style="background-color: #f9f9f9; margin: 10px 0; padding: 15px; border-radius: 8px; display: flex; justify-content: space-between;">
            <strong style="color: #007BFF; flex: 1; text-align: left;">Mobile No:</strong>
            <span style="color: #555; flex: 1; text-align: center;">${mobile}</span>
        </div>
        <div class="profile-item" style="background-color: #f9f9f9; margin: 10px 0; padding: 15px; border-radius: 8px; display: flex; justify-content: space-between;">
            <strong style="color: #007BFF; flex: 1; text-align: left;">Password:</strong>
            <span style="color: #555; flex: 1; text-align: center;">${password}</span>
        </div>
    </div>
</div>
